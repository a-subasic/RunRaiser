<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp"
    app:cardPreventCornerOverlap="false"
    >

    <LinearLayout
        android:id="@+id/group_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textColor="@color/black"
                    android:text="Organization Name"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:drawablePadding="2dp"
                    android:textSize="12dp"
                    android:drawableStart="@drawable/ic_location"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/black"
                    android:text="Podhum 72, 51000 Rijeka"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textSize="12dp"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/black"
                    android:text="095 385 9999"/>
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:drawableStart="@drawable/ic_email"
                    android:padding="2dp"
                    android:textSize="12dp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/black"
                    android:text="azra.subasic2@gmail.com"/>
                <TextView
                    android:id="@+id/tv_web"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_link"
                    android:padding="2dp"
                    android:textSize="12dp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/black"
                    android:text="www.azra.com"/>

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/nunito"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="8dp"
            />

        <Button
            android:id="@+id/donate_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:textSize="16sp"
            android:background="@drawable/start_btn_bg"
            android:text="@string/select"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/nunito_extrabold"
            android:visibility="visible"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>